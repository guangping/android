<?xml version="1.0" encoding="utf-8"?>
<ripple
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/btn_grey_enable">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_size" />
            <solid android:color="@color/btn_white_disable" />
            <stroke android:width="1dp" android:color="@color/btn_grey_normal" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_size" />
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="@color/btn_grey_normal" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_size" />
            <solid android:color="#fcfcfc" />
            <stroke android:width="1dp" android:color="@color/btn_grey_normal" />
        </shape>
    </item>
</ripple>